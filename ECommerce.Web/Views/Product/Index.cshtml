@model IEnumerable<ECommer.ItemUI.Models.ProductDto>

<br />
<br />
<div class=" container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Product List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-action="Create" class="btn btn-outline-primary">Create New Product</a>
		</div>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Category</th>
				<th>Brand</th>
				<th>Description</th>
				<th>Price</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var item in Model){
				<tr>
					<td>@item.Id</td>
					<td>@item.Name</td>
					<td>
						<a asp-controller="Category" asp-action="Details" asp-route-id="@item.CategoryId">
							@item.CategoryBaseDto.Name 
						</a>
					</td>
					<td>
						<a asp-controller="Brand"  asp-action="Details" asp-route-id="@item.BrandId">
							@item.BrandBaseDto.Name 
						</a>
					</td>
					<td>@item.Description</td>
					<td>@((item.Price).ToString("c"))</td>
					<td>
						<a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id">Edit</a>
						<a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
						<a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Details</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>